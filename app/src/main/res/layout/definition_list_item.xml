<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/definitionNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="1."
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/definitionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/definitionNumberTextView"
        android:layout_toRightOf="@+id/definitionNumberTextView"
        android:text="New Text"
        android:textColor="@color/text_color"
        android:textIsSelectable="false"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/contextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/definitionTextView"
        android:layout_alignStart="@+id/definitionTextView"
        android:layout_below="@+id/definitionTextView"
        android:text="New Text"
        android:textColor="#9E9E9E"
        android:textSize="16sp" />
</RelativeLayout>