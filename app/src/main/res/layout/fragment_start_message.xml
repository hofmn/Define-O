<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hofmn.defineo.fragments.WordCardFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/word_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        card_view:cardCornerRadius="0dp"
        card_view:contentPaddingBottom="16dp"
        card_view:contentPaddingLeft="32dp"
        card_view:contentPaddingRight="32dp"
        card_view:contentPaddingTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trainingStartedWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Тренування розпочато!"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/trainingStartedMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Свайпніть убік, щоб переглянути перше слово"
                android:textColor="@color/text_color"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
